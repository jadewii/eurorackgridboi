rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Module ownership tracking
    match /ownership/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['modules', 'racks', 'jamnutz'])
        && request.resource.data.jamnutz >= 0;
    }
    
    // Public module catalog (read-only)
    match /modules/{moduleId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Public rack templates (read-only)
    match /racks/{rackId} {
      allow read: if true;
      allow write: if false;
    }
    
    // User transactions (append-only for users)
    match /transactions/{transactionId} {
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         resource.data.recipientId == request.auth.uid);
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.timestamp == request.time;
    }
  }
}