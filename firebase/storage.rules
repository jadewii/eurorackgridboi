rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public read for module images
    match /modules/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Public read for WebP animations
    match /webp/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Public read for icons
    match /icons/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // User uploads (avatars, custom racks)
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024 // 5MB limit
        && request.resource.contentType.matches('image/.*');
    }
  }
}