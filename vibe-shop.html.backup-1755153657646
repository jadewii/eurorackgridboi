                        <button class="buy-button" onclick="buyVibeItem('saturn', 30, this)">
                            30 <img src="https://jqxshcyqxhbmvqrrthxy.supabase.co/storage/v1/object/public/icons/jacknut.png" class="jacknut-icon">
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // Show category function
        function showCategory(category) {
            // Hide all sections
            document.querySelectorAll('.shop-section').forEach(section => {
                section.style.display = 'none';
            });
            
            // Remove active from all tabs
            document.querySelectorAll('.category-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected section
            document.getElementById(category + '-section').style.display = 'block';
            
            // Mark tab as active
            event.target.classList.add('active');
        }
        
        // Buy vibe item function
        function buyVibeItem(itemName, price, button) {
            const credits = parseInt(document.getElementById('credits').textContent);
            
            if (credits >= price) {
                if (confirm(`Purchase ${itemName.toUpperCase()} for ${price} jacknuts?`)) {
                    // Update credits
                    const newCredits = credits - price;
                    document.getElementById('credits').textContent = newCredits;
                    localStorage.setItem('rack-credits', newCredits);
                    
                    // Save to owned vibe items
                    let ownedVibes = JSON.parse(localStorage.getItem('owned-vibes') || '[]');
                    if (!ownedVibes.includes(itemName)) {
                        ownedVibes.push(itemName);
                        localStorage.setItem('owned-vibes', JSON.stringify(ownedVibes));
                    }
                    
                    // Update button
                    button.textContent = 'OWNED';
                    button.disabled = true;
                    button.parentElement.parentElement.classList.add('owned');
                    
                    // Add to preview
                    addToPreview(itemName);
                    
                    alert(`🎉 ${itemName.toUpperCase()} purchased!\n\nCustomize its position on your profile!`);
                }
            } else {
                alert(`Insufficient jacknuts! You need ${price} but only have ${credits}.`);
            }
        }
        
        // Add item to preview
        function addToPreview(itemName) {
            // This would add the item to the rack preview
            // For now, just console log
            console.log('Added to preview:', itemName);
        }
        
        // Load owned items
        function loadOwnedItems() {
            const ownedVibes = JSON.parse(localStorage.getItem('owned-vibes') || '[]');
            
            // Mark owned items
            ownedVibes.forEach(itemName => {
                const buttons = document.querySelectorAll('.buy-button');
                buttons.forEach(button => {
                    if (button.onclick && button.onclick.toString().includes(itemName)) {
                        button.textContent = 'OWNED';
                        button.disabled = true;
                        button.parentElement.parentElement.classList.add('owned');
                    }
                });
            });
        }
        
        // Load credits
        const savedCredits = localStorage.getItem('rack-credits') || '100';
        document.getElementById('credits').textContent = savedCredits;
        
        // Load owned items on page load
        document.addEventListener('DOMContentLoaded', loadOwnedItems);
        
        // Make items draggable in preview
        document.querySelectorAll('.vibe-item-display').forEach(item => {
            item.addEventListener('mousedown', function(e) {
                const startX = e.clientX - item.offsetLeft;
                const startY = e.clientY - item.offsetTop;
                
                function moveItem(e) {
                    item.style.left = (e.clientX - startX) + 'px';
                    item.style.top = (e.clientY - startY) + 'px';
                }
                
                function stopMove() {
                    document.removeEventListener('mousemove', moveItem);
                    document.removeEventListener('mouseup', stopMove);
                }
                
                document.addEventListener('mousemove', moveItem);
                document.addEventListener('mouseup', stopMove);
            });
        });
    </script>
</body>
</html>